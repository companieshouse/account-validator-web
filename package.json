{
    "name": "account-validator-web",
    "version": "0.0.1",
    "description": "Web frontend for the account validator service",
    "main": "./src/bin/www.ts",
    "scripts": {
        "start": "node dist/bin/www.js",
        "build:server": "tsc && cp -r views dist/",
        "build:assets": "ts-node build-static-assets.ts",
        "build": "npm run build:server && npm run build:assets",
        "dev": "nodemon --watch src --ignore 'src/**/*.unit.ts' --ext ts --exec 'NODE_OPTIONS=\"--inspect=0.0.0.0\" ts-node ./src/bin/www.ts'",
        "test": "jest",
        "lint": "eslint '{src,test,assets/src}/**/*'",
        "lint:fix": "eslint '{src,test,assets/src}/**/*' --fix",
        "sonarqube-base-branch": "sonar-scanner",
        "sonarqube-pull-request": "sonar-scanner -D sonar.pullrequest.base=main",
        "sonarqube": "branch=$(git rev-parse --symbolic-full-name --abbrev-ref HEAD); if [[ $branch == \"HEAD\" ]]; then echo $branch && npm run sonarqube-base-branch; else echo $branch && npm run sonarqube-pull-request; fi;",
        "coverage": "jest --coverage --passWithNoTests",
        "prepare": "husky install"
    },
    "dependencies": {
        "16": "^0.0.2",
        "@companieshouse/api-sdk-node": "^2.0.113",
        "@companieshouse/node-session-handler": "^4.1.9",
        "@companieshouse/structured-logging-node": "^1.0.8",
        "@companieshouse/web-security-node": "^2.0.3",
        "axios": "^1.5.0",
        "cookie-parser": "^1.4.6",
        "express": "^4.18.2",
        "glob": "^10.3.5",
        "govuk-frontend": "^4.7.0",
        "js-yaml": "^4.1.0",
        "luxon": "^3.4.3",
        "multer": "^1.4.5-lts.1",
        "nunjucks": "^3.2.4",
        "private-api-sdk-node": "github:companieshouse/private-api-sdk-node#1.0.1",
        "reflect-metadata": "^0.1.13",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@swc/core": "1.3.82",
        "@types/cookie-parser": "^1.4.4",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.5",
        "@types/js-yaml": "^4.0.6",
        "@types/luxon": "^3.3.2",
        "@types/multer": "^1.4.7",
        "@types/nunjucks": "^3.2.3",
        "@types/supertest": "^2.0.12",
        "@types/uuid": "^9.0.4",
        "@typescript-eslint/eslint-plugin": "^6.7.2",
        "@typescript-eslint/parser": "^6.7.2",
        "esbuild": "^0.19.3",
        "eslint": "^8.49.0",
        "husky": "^8.0.3",
        "jest": "^29.7.0",
        "nodemon": "^3.0.1",
        "sonarqube-scanner": "^3.1.0",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2"
    },
    "overrides": {
        "nodemon": "$nodemon",
        "glob-parent": "^5.1.2"
    },
    "keywords": [],
    "author": "",
    "license": "ISC"
}
