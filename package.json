{
    "name": "account-validator-web",
    "version": "0.0.1",
    "description": "Web frontend for the account validator service",
    "main": "./src/bin/www.ts",
    "scripts": {
        "start": "node dist/bin/www.js",
        "build:server": "tsc && cp -r views dist/",
        "build:assets": "ts-node build-static-assets.ts",
        "build": "npm run build:server && npm run build:assets",
        "dev": "nodemon --watch src --ignore 'src/**/*.unit.ts' --ext ts --exec 'NODE_OPTIONS=\"--inspect=0.0.0.0\" ts-node ./src/bin/www.ts'",
        "test": "jest",
        "lint": "eslint '{src,test}/**/*'",
        "lint:fix": "eslint '{src,test}/**/*' --fix",
        "sonarqube-base-branch": "sonar-scanner",
        "sonarqube-pull-request": "sonar-scanner -D sonar.pullrequest.base=main",
        "sonarqube": "branch=$(git rev-parse --symbolic-full-name --abbrev-ref HEAD); if [[ $branch == \"HEAD\" ]]; then echo $branch && npm run sonarqube-base-branch; else echo $branch && npm run sonarqube-pull-request; fi;",
        "coverage": "jest --coverage --passWithNoTests",
        "prepare": "husky install"
    },
    "dependencies": {
        "16": "^0.0.2",
        "@companieshouse/api-sdk-node": "^2.0.70",
        "@companieshouse/structured-logging-node": "^1.0.8",
        "@companieshouse/web-security-node": "^2.0.0",
        "axios": "^0.21.4",
        "cookie-parser": "^1.4.6",
        "express": "^4.17.1",
        "express-sse": "^0.5.1",
        "glob": "^10.3.3",
        "govuk-frontend": "^3.14.0",
        "js-yaml": "^4.1.0",
        "luxon": "^2.1.1",
        "multer": "^1.4.5-lts.1",
        "nunjucks": "^3.2.3",
        "private-api-sdk-node": "github:companieshouse/private-api-sdk-node#0.1.89",
        "reflect-metadata": "^0.1.13",
        "uuid": "^8.3.2",
        "yargs": "^15.4.1"
    },
    "devDependencies": {
        "@swc/core": "^1.3.34",
        "@types/cookie-parser": "^1.4.3",
        "@types/chai": "^4.2.22",
        "@types/express": "^4.17.1",
        "@types/jest": "^27.0.3",
        "@types/js-yaml": "^4.0.4",
        "@types/luxon": "^2.0.7",
        "@types/multer": "^1.4.7",
        "@types/sinon": "^9.0.11",
        "@types/sinon-chai": "^3.2.8",
        "@types/nunjucks": "^3.2.1",
        "@types/supertest": "^2.0.11",
        "@types/uuid": "^8.3.3",
        "@typescript-eslint/eslint-plugin": "^4.27.0",
        "@typescript-eslint/parser": "^4.27.0",
        "chai": "~4.2.0",
        "esbuild": "^0.18.11",
        "esbuild-plugin-glob": "^2.2.2",
        "eslint": "^7.28.0",
        "gulp": "^4.0.2",
        "husky": "^8.0.2",
        "jest": "^27.3.1",
        "sinon": "^9.2.4",
        "sinon-chai": "~3.5.0",
        "nodemon": "^2.0.20",
        "regenerator-runtime": "^0.13.11",
        "sonarqube-scanner": "^2.8.1",
        "supertest": "^6.1.3",
        "ts-jest": "^27.0.7",
        "ts-node": "^10.9.1",
        "typescript": "^4.4.4"
    },
    "keywords": [],
    "author": "",
    "license": "ISC"
}
