
custom_build(
  ref = '169942020521.dkr.ecr.eu-west-1.amazonaws.com/local/account-validator-web',
  command = 'DOCKER_BUILDKIT=0 docker build --build-arg SSH_PRIVATE_KEY="$(cat ~/.ssh/id_rsa)" --build-arg SSH_PRIVATE_KEY_PASSPHRASE --tag $EXPECTED_REF . -f Dockerfile.dev',
  live_update = [
    sync(local_path = './src', remote_path = '/app/src'),
    run('npm install', trigger=['./package.json', './package-lock.json'])
  ],
  deps = [
    './src',
    './views'
  ]
)
